@model Akademinya.Models.Kategori
@using Akademinya.Models
@{
    ViewBag.Title = "KategoriEkleDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    AkademinyaEntities db = new AkademinyaEntities();


}
<div class="p-box">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title"> Kategori Ekle</h3>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="hehe form-horizontal">

                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <h3>Kategori Adı:</h3>
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <h3>Üst Menu:</h3>
                            <div class=" form-group">
                                <div class="col-md-10">


                                    @Html.DropDownListFor(model => model.UstId, new SelectList(ViewBag.UstKategoriler, "Id", "Ad"), "", new { @class = "form-control" })

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <input type="submit" value="Onayla" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title"> Kategoriler</h3>
                </div>
                <div class="box-body">
                    <ul class="treeview">
                        @foreach (var item in db.Kategori.ToList().Where(m => m.UstId == 0&&m.Silindi!=true))
                        {
                            if (db.Kategori.ToList().Where(m => m.UstId == item.Id).Count() >= 1)
                            {
                                <li>
                                    @item.Ad<button class="btn btn-xs btn-danger" onclick="return KategoriSil(@item.Id)" style="float:right">X</button><hr />
                                    <ul>
                                        @foreach (var item2 in db.Kategori.ToList().Where(m => m.UstId == item.Id && m.Silindi != true))
                                        {
                                            <li>@item2.Ad <button class="btn btn-xs btn-danger" onclick="return KategoriSil(@item2.Id)" style="float:right">X</button><hr /></li> 
                                        }
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li>@item.Ad<button class="btn btn-xs btn-danger" onclick="return KategoriSil(@item.Id)" style="float:right">X</button><hr /></li>
                            }

                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.treeview').treeView();
    });

    function KategoriSil(Id) {

        bootbox.confirm("Silmek istediğinize emin misiniz?", function (result) {
            if (result) {
                var dataObject = {
                    Id: $("#Id").val()
                };
                var form_data = new FormData();
                form_data.append('Id', dataObject);
                window.location = '/Admin/KategoriSil/' + Id;
            }
        });
    }
</script>

